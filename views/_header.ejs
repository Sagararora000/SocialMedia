<header>
    <img src="/images/fbLogo.png" style="width: 150px; width: 150px;" alt="" srcset="">
    <ul>
        <!-- If user is set authenticated then  -->
        <% if(locals.user){ %>
            <li> 
                <a href="/users/profile/<%= user.id %>">
                    <%= user.name %>
                </a>
                
            </li>
            <li>
                <a href="/users/sign-out">Sign Out</a>
            </li>
        <% }else{ %>
            
            <li class="user-sign">
                <a href="/users/sign-in">Sign In</a>
            </li>
            <li class="user-sign">
                <a href="/users/sign-up">Sign Up</a>
            </li>
    
        <% } %>
        
    </ul>
</header>

