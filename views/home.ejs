<link rel="stylesheet" href="/css/home.css">
<h1>hello this is home page</h1>

<section id="feed-posts">
    <h4>Posts</h4>
    <%if(locals.user){%>
        <form action="/postFeed" id="new-post-form" method="post">
            <textarea name="content" id="" cols="30" rows="3" placeholder="Type here"></textarea>
            <input type="submit" value="Post">
        </form>
        <%for(post of posts){%>


            <p style="color:white">
                <%=post.content %>
            </p>
            <p>-by <%= post.user.name%>
            </p>
            <br>





            <%}%>


                <%}else{%>
                    <h1>Log in to Post content</h1>
                    <%}%>

</section>