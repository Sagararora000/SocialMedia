<link rel="stylesheet" href="/css/home.css">
<h1>hello this is home page</h1>

<section id="feed-posts">
    <h4>Posts</h4>
     
    <!-- Authentication for posts 1st level check -->
    <%if(locals.user){%>
        <form action="/postFeed" id="new-post-form" method="post">
            <textarea name="content" id="" cols="30" rows="3" placeholder="Type here"></textarea>
            <input type="submit" value="Post">
        </form>
    <%}%>
    <ul>
        <%for(post of posts){%>
            <li>
                <p style="color:white">
                    <%=post.content %>
                        <br>
                        <small>
                            <%= post.user.name%>
                        </small>
                </p>
            </li>
        <%}%>
    </ul>

</section>